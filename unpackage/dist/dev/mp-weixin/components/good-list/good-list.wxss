.good-list {
  background-color: #fff;
}
.good-list .good-li {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.good-list .good-li .good-img {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}
.good-list .good-li .flex-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.good-list .good-li .flex-item .good-name {
  font-size: 26rpx;
  line-height: 40rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.good-list .good-li .flex-item .good-price {
  font-size: 26rpx;
  color: red;
}
.good-list .good-li .flex-item .good-sold {
  font-size: 24rpx;
  margin-left: 16rpx;
  color: gray;
}

